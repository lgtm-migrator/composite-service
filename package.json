{
  "name": "composite-service",
  "version": "0.3.2",
  "description": "Helps you run multiple services as one",
  "keywords": [
    "compose",
    "composed",
    "composite",
    "group",
    "grouped",
    "grouping",
    "merge",
    "merged",
    "merging",
    "server",
    "servers",
    "service",
    "services",
    "program",
    "programs"
  ],
  "engines": {
    "node": ">=10"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/http-gateway-server.js",
    "dist/**/*.d.ts",
    "src"
  ],
  "scripts": {
    "lint": "tsdx lint scripts src test website",
    "lint-fix": "yarn lint --fix",
    "_build": "tsdx --target node --format cjs --entry src/index.ts --entry src/http-gateway/server.ts",
    "build": "yarn _build build",
    "build-watch": "yarn _build watch",
    "extract-api": "api-extractor run --local",
    "check-api": "api-extractor run",
    "_test": "tsdx test --runInBand",
    "test-only": "yarn _test --ci",
    "test-watch": "yarn _test --watch",
    "test": "yarn lint && yarn build && yarn check-api && yarn test-only",
    "document-api": "node scripts/document-api.js"
  },
  "dependencies": {
    "cloneable-readable": "^2.0.1",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "merge-stream": "^2.0.0",
    "npm-run-path": "^4.0.1",
    "path-key": "^3.1.1",
    "serialize-javascript": "^4.0.0",
    "split": "^1.0.1",
    "ts-interface-checker": "^0.1.13",
    "which": "^2.0.2"
  },
  "optionalDependencies": {
    "generate-ctrl-c-event": "^1.0.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.8.21",
    "@microsoft/api-extractor": "^7.9.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/cloneable-readable": "^2.0.0",
    "@types/express": "^4.17.7",
    "@types/merge-stream": "^1.1.2",
    "@types/node-fetch": "^2.5.7",
    "@types/serialize-javascript": "^4.0.0",
    "@types/split": "^1.0.0",
    "@types/which": "^1.3.2",
    "@zen_flow/ts-interface-builder": "^0.3.2",
    "node-fetch": "^2.6.0",
    "semantic-release": "^17.1.1",
    "shx": "0.3.2",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "license": "MIT",
  "author": {
    "name": "Matthew Francis Brunetti",
    "email": "zenflow87@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zenflow/composite-service.git"
  },
  "bugs": {
    "url": "https://github.com/zenflow/composite-service/issues"
  },
  "homepage": "https://github.com/zenflow/composite-service#readme",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
